{% extends 'layoutAdmin.html.twig' %}
{% block title %} {{ parent() }} | Editer Un Vélo{% endblock %}
{% block content %}
    <h2 class="text-center my-5">Editer un vélo</h2>
    <div class="container pb-5">
        <ul class="mt-3 alert alert-danger">
            {%- for error in errors -%}
                <li>{{ error }}</li>
            {%- endfor -%}
        </ul>
        <form action="" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Nom du vélo</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Gravel Trek" required
                       value="{{ bike.name }}">
            </div>
            <div class="form-group">
                <label for="weight">Poids</label>
                <input type="number" step="0.01" class="form-control" id="weight" name="weight" placeholder="10,5" required
                       value="{{ bike.weight }}">
            </div>
            <div class="form-group">
                <label for="stock">Nombre de vélo</label>
                <input type="number" class="form-control" id="stock" name="stock"
                       placeholder="10" required value="{{ bike.stock }}">
            </div>
            <div class="form-group">
                <label for="category_id">Catégorie</label>
                <select class="form-control" id="category_id" name="category_id" required
                        value="{{ bike.category_id }}">
                    {% for category in categories %}
                        <option {{ bike.category_id == category.id ? 'selected' }} value="{{ category.id }}">
                            {{ category.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="maximum_charge">Charge maximal (optionnel)</label>
                <input type="text" class="form-control" id="maximum_charge" name="maximum_charge"
                       placeholder="100" value="{{ bike.maximum_charge }}">
            </div>
            <div class="form-group">
                <label for="autonomy">Autonomie (optionnel)</label>
                <input type="text" class="form-control" id="autonomy" name="autonomy"
                       placeholder="200wh " value="{{ bike.autonomy }}">
            </div>
            <div class="form-group">
                <label for="frame_size">Taille du cadre (optionnel)</label>
                <input type="text" class="form-control" id="frame_size" name="frame_size"
                       placeholder="S" value="{{ bike.frame_size }}">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" class="form-control" id="image" name="image">
                <p>Image actuelle : {{ bike.image }}</p>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea type="text" class="form-control" id="description" name="description" required
                          placeholder="Ce Vélo est muni de ..." >{{ bike.description }}</textarea>
            </div>
            <div class=" form-group text-center">
                <button class=" btn btn-info ">Modifier</button>
            </div>
        </form>
    </div>
{% endblock %}