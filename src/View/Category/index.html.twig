{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} | Nos vélos{% endblock %}

{% block content %}
    <h1 class="text-center my-5">Nos vélos</h1>

    <div class="container-fluid" id="category-container">
        <div class="row category pb-5">
            {% for category in categories %}
            <div class="col-lg-3 offset-lg-2 col-md-6 col-sm-12 pb-5">
                <div class="card text-white card-inverse">
                    <a class="nav-link" href="/bicycle/category/{{ category.id }}">
                        <span class="card-body">
                            <p class="text-light text-center">{{ category.name }}</p>
                        </span>
                    </a>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}